<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" >
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="splash_title_style" >
        <item name="android:textSize">@dimen/splash_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        
    </style>
    
    <style name="splash_image_style" >
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="customizableToggleButton" parent="android:Widget">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
    

    <style name="organization_button_style" parent="customizableToggleButton">
	    <item name="android:background">@drawable/organization_mode_style</item>
	</style>
	
     <style name="continuous_line_button_style" parent="customizableToggleButton">
	    <item name="android:background">@drawable/continuous_line_mode_style</item>
	</style>
	
     <style name="dotted_line_button_style" parent="customizableToggleButton">
	    <item name="android:background">@drawable/dotted_line_mode_style</item>
	</style>

    <style name="local_round_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/local_round_player_background</item>
    </style>

    <style name="local_triangle_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/local_triangle_player_background</item>
    </style>

    <style name="local_square_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/local_square_player_background</item>
    </style>

    <style name="visit_round_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/visit_round_player_background</item>
    </style>

    <style name="visit_triangle_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/visit_triangle_player_background</item>
    </style>

    <style name="visit_square_player_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/visit_square_player_background</item>
    </style>

    <style name="volleyball_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/volleyball_background</item>
    </style>

    <style name="soccerball_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/soccerball_background</item>
    </style>

    <style name="basketball_style" parent="customizableToggleButton">
        <item name="android:background">@drawable/basketball_background</item>
    </style>

</resources>